<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/_itemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="5dp">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:id="@+id/_photoBaseLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            app:scale_base_width="1280"
            app:scale_base_height="800">


            <ImageView
                android:id="@+id/_photoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:scale_top="0"
                app:scale_left="0"
                app:scale_width="1280"
                app:scale_height="800"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_alpha"
                android:scaleType="centerCrop"
                app:scale_top="0"
                app:scale_left="0"
                app:scale_width="1280"
                app:scale_height="800"/>

            <TextView
                android:id="@+id/_photoDayTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thursday"
                android:gravity="center_vertical|left"
                android:paddingRight="5dp"
                android:textColor="@color/color_white"
                app:scale_top="500"
                app:scale_left="30"
                app:scale_width="300"
                app:scale_height="120"
                app:scale_textsize="40"/>
            <TextView
                android:id="@+id/_photoDayNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text="15"
                android:textColor="@color/color_white"
                app:scale_top="530"
                app:scale_left="30"
                app:scale_width="270"
                app:scale_height="240"
                app:scale_textsize="150"/>
            <TextView
                android:id="@+id/_photoFullDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:gravity="center_vertical|left"
                android:text="Sep"
                android:paddingRight="5dp"
                app:scale_top="690"
                app:scale_left="30"
                app:scale_width="900"
                app:scale_height="120"
                app:scale_textsize="40"/>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_close"
                android:scaleType="fitXY"
                app:scale_top="30"
                app:scale_left="1193"
                app:scale_width="57"
                app:scale_height="57"/>

            <ImageView
                android:id="@+id/_photoDeleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:scale_top="9"
                app:scale_left="1170"
                app:scale_width="100"
                app:scale_height="100"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>