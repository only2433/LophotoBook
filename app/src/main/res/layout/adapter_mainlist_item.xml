<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >
        <android.support.v7.widget.CardView
            android:id="@+id/_itemCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            app:cardElevation="@dimen/cardview_compat_inset_shadow"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">
            >
            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/_itemLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:scale_base_width="1280"
                app:scale_base_height="250">
                <ImageView
                    android:id="@+id/_itemMonthBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_width="250"
                    app:scale_height="250"
                    android:background="@color/colorAccent"/>
                <TextView
                    android:id="@+id/_itemMonthNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    app:scale_top="0"
                    app:scale_left="0"
                    app:scale_width="250"
                    app:scale_height="250"
                    app:scale_textsize="100"/>
                <TextView
                    android:id="@+id/_itemMonthTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_title_color"
                    android:gravity="center_vertical"
                    app:scale_top="0"
                    app:scale_left="350"
                    app:scale_width="930"
                    app:scale_height="250"
                    app:scale_textsize="100"/>
            </com.ssomai.android.scalablelayout.ScalableLayout>


        </android.support.v7.widget.CardView>





</RelativeLayout>